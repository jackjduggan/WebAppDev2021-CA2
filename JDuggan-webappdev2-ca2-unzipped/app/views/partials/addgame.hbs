<form class="ui stacked segment form" action="/collection/{{collection.id}}/addgame" method="POST">
  <div class="two fields">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
      placeholder="Title">
    </div>
    <div class="field">
      <label for="developer">Developer</label>
      <input type="text" name="developer" required title = "Please include a valid Developer"
      placeholder="Developer"  >
    </div>
    <div class="field">
      <label for="release">Year of Release</label>
      <input type="text" name="release" required title = "Please include a valid Year"
      placeholder="2021"  >
    </div>
    <div class="field">
      <label for="playtime">Playtime (hours)</label>
      <input type="text" name="playtime" required title = "Please include a valid number"
      placeholder="25"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Game</button>
</form>